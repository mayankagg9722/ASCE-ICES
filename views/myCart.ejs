  <div class="preloader">
    <div class="col-xs-3 col-sm-1"><img src="/images/loader.gif" width="100%" height="100%"></img></div>
  </div>
  <div id="overlay" onclick="closeNav()"></div>
  <div id="mySidenav" class="sidenav">

    <div class="altr row"></div>
    <div class="row content col-xs-12">
    <div class="row" style="padding:20px 30px;">
        <div class="mycart row col-xs-12 col-sm-8">
            <div class="cart-option col-xs-12">
                <p class="left col-xs-12 col-sm-2"><b>My Purchased</b></p>
                <p id="pc" class="right col-xs-2">Price</p>
            </div>
            <% cart[0].purchased.workshops.forEach(function(data,index){%>
            <div class="cart-item col-xs-12">
                <div class="item-details col-xs-12 col-sm-10  mobile-center">                  
                    <div class="item-name">
                        <h3><%=data.name%></h3>
                    </div>
                    <div class="item-date">
                        <p>Date:<%=14+data.day%>/03/2018</p>
                    </div>
                    <div class="item-venue">
                        <p>Venue:<%=data.venue%></p>
                    </div>
                   <!-- <div class="item-contact">
                        <p>contact:9876543210(Name)</p>
                    </div>-->
                    <div class="price" id="mobile">
                        <p>Price:Rs.<%=data.price %></p>
                    </div>
    
                </div>
                <div class="item-price col-sm-2" id="pc">
                    <p>Rs.<%=data.price %></p>
                </div>
            </div>
            <%})%>
            <% cart[0].purchased.events.forEach(function(data,index){%>
            <div class="cart-item col-xs-12">
                <div class="item-details col-xs-12 col-sm-10 mobile-center">                  
                    <div class="item-name">
                        <h3><%=data.name%></h3>
                    </div>
                    <div class="item-date">
                        <p>Date:<%=14+data.day %>/03/2018</p>
                    </div>

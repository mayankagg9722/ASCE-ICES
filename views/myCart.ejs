                        <p>Venue:<%=data.venue%></p>
                    </div>
                   <!-- <div class="item-contact">
                        <p>contact:9876543210(Name)</p>
                    </div>-->
                    <div class="price" id="mobile">
                        <p>Price:Rs.<%=data.price %></p>
                    </div>
                    <div class="item-buttons">
                        <button type="button" class="workshopRemove" value=<%= data.productID%>>Remove</button>
                    </div>
                </div>
                <div class="item-price col-sm-2" id="pc">
                    <p>Rs.<%=data.price %></p>
                </div>
            </div>
            <%})%>
            <% cart[0].cart.events.forEach(function(data,index){%>
            <div class="cart-item col-xs-12">
                <div class="item-details col-xs-12 col-sm-10 mobile-center">                  
                    <div class="item-name">
                        <h3><%=data.name%></h3>
                    </div>
                    <div class="item-date">
                        <p>Date:<%=14+data.day %>/03/2018</p>
                    </div>
                    <div class="item-venue">
                        <p>Venue:<%=data.venue %></p>
                    </div>
                    <!--div class="item-contact">
                        <p>contact:9876543210(Name)</p>
                    </div-->
                    <div class="price" id="mobile">
                        <p>Price:Rs.<%=data.price %></p>
                    </div>
                    <div class="item-buttons">
                        <button type="button" class="eventRemove" value=<%= data.productID%>>Remove</button>
                    </div>
                </div>
                <div class="item-price col-sm-2" id="pc">
                    <p>Rs.<%=data.price%></p>
                </div>
            </div>
            <%})%>
            <div class="for-all for-all-mobile col-xs-12">
                <a href="/profile"><button type="button">Add More</button></a>
                <a href="/payment"><button type="button" id="all-items">Make Payment</button></a>
            </div>
        </div>






        <div class="price-details col-sm-offset-1 col-sm-3" style="position:fixed;z-index:100;right:40px;" id="pc">
            <div class="heading">   
                <h3>Price Details</h3>
            </div>

            <div class="cart-option col-xs-12">
                <p class="left col-xs-12 col-sm-2"><b>My Cart</b></p>
                <p id="pc" class="right col-xs-2">Price</p>
            </div>
            <% cart[0].cart.workshops.forEach(function(data,index){%>
            <div class="cart-item col-xs-12">
                <div class="item-details col-xs-12 col-sm-10  mobile-center">                  
